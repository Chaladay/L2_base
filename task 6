function toWeirdCase(string){
  return string.split(' ')
        .map(word => { 
            return word.split('') 
                .map((letter, index) => { 
                    if (index % 2 === 0) { 
                        return letter.toUpperCase();
                    } else {  
                        return letter.toLowerCase();
                    }
                })
                .join('');
        })
        .join(' ');
}
